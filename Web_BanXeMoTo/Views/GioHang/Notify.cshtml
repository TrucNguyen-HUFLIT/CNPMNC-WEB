
@{ ViewData["Title"] = "Xác nhận ";
    Layout = "~/Views/Shared/_CustomerLayout.cshtml";
}

<!-- Cart view section -->
<section id="cart-view">
    <div class="container">
        <div class="row">
            <div class="col-md-12">
                <div class="cart-view-area">
                    <div class="cart-view-table">
                        <h1 style="border; text-align:center">Đặt hàng thành công!</h1>
                        <h3 style="text-align:center">Đơn hàng đã được lưu, chúng tôi sẽ gởi email xác nhận sớm nhất cho bạn.</h3>
                        <a class="aa-cart-view-btn" style="justify-content:center" asp-action="History" asp-controller="Profile">Lịch sử đặt hàng</a> 
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>
<!-- / Cart view section -->
