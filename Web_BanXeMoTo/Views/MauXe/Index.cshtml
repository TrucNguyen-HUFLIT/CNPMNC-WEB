@{ 
    Layout = "~/Views/Shared/_LayoutManager.cshtml";
}
@model Web_BanXeMoTo.Controllers.MauXeViewModel


<div class="app-main__inner">
    <div class="app-page-title">
        <div class="page-title-wrapper">
            <div class="page-title-heading">
                <div>

                    Quản lý Mẫu xe

                </div>
            </div>
        </div>
    </div>
    <ul class="body-tabs body-tabs-layout tabs-animated body-tabs-animated nav">
        <li class="nav-item">
            <a asp-action="Index" class="nav-link active">
                <span>Mẫu xe</span>
            </a>
        </li>

        <li class="nav-item">
            <a asp-action="Create" class="nav-link ">
                <span>Thêm mẫu xe</span>
            </a>


        </li>
    </ul>
    <div class="row">
        <div class="col-md-12">
            <div class="main-card mb-3 card">
                <div class="card-body">
                    <h5 class="card-title">Controls Types</h5>
                    <form asp-action="MauXe">
                        <div class="position-relative form-group">
                            <label for="exampleSelect" class="">Hãng xe</label>
                            <select name="select" id="exampleSelect" class="form-control">
                                @foreach (var item in Model.ListHang)
                                {
                                    <option>@item.TenHang</option>
                                }
                            </select>
                        </div>

                        <div class="form-group">
                            <label asp-for="mauXe.GiaBan" class="control-label"></label>
                            <input asp-for="mauXe.GiaBan" class="form-control" />
                            <span asp-validation-for="mauXe.GiaBan" class="text-danger"></span>
                        </div>

                        <div class="form-group">
                            <label asp-for="mauXe.BaoHanh" class="control-label"></label>
                            <input asp-for="mauXe.BaoHanh" class="form-control" />
                            <span asp-validation-for="mauXe.BaoHanh" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="mauXe.MoTa" class="control-label"></label>
                            <input asp-for="mauXe.MoTa" class="form-control" />
                            <span asp-validation-for="mauXe.MoTa" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <input type="submit" value="Save" class="btn btn-primary" />
                        </div>
                    </form>

                </div>
            </div>
        </div>
    </div>
</div>
