@model Web_BanXeMoTo.Models.NhanVien

@{
    ViewData["Title"] = "ChangePasswordNV";
    Layout = "~/Views/Shared/_LayoutManager.cshtml";
}

<div class="row">
    <div class="col-md-12">
        <div class="main-card mb-3 card">
            <div class="card-body">
                <div style="margin-left: 50px; margin-right: 50px">
                    <h2>Đổi mật khẩu</h2>
                    <hr />
                    <div class="row">
                        <div class="col-md-4">
                            <form asp-action="ChangePasswordNV">
                                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                                <div class="form-group" hidden>
                                    <label asp-for="Idnv" class="control-label"></label>
                                    <input asp-for="Idnv" class="form-control" />
                                    <span asp-validation-for="Idnv" class="text-danger"></span>
                                </div>
                                <div class="form-group" hidden>
                                    <label asp-for="Idtype" class="control-label"></label>
                                    <input asp-for="Idtype" class="form-control" />
                                    <span asp-validation-for="Idtype" class="text-danger"></span>
                                </div>
                                <div class="form-group" hidden>
                                    <label asp-for="Email" class="control-label"></label>
                                    <input asp-for="Email" class="form-control" />
                                    <span asp-validation-for="Email" class="text-danger"></span>
                                </div>
                                <div class="form-group" hidden>
                                    <label asp-for="Pass" class="control-label"></label>
                                    <input asp-for="Pass" class="form-control" />
                                    <span asp-validation-for="Pass" class="text-danger"></span>
                                </div>
                                <div class="form-group" hidden>
                                    <label asp-for="TenNv" class="control-label"></label>
                                    <input asp-for="TenNv" class="form-control" />
                                    <span asp-validation-for="TenNv" class="text-danger"></span>
                                </div>
                                <div class="form-group" hidden>
                                    <label asp-for="DienThoai" class="control-label"></label>
                                    <input asp-for="DienThoai" class="form-control" />
                                    <span asp-validation-for="DienThoai" class="text-danger"></span>
                                </div>
                                <div class="form-group" hidden>
                                    <label asp-for="DiaChi" class="control-label"></label>
                                    <input asp-for="DiaChi" class="form-control" />
                                    <span asp-validation-for="DiaChi" class="text-danger"></span>
                                </div>
                                <div class="form-group" hidden>
                                    <label asp-for="Cmnd" class="control-label"></label>
                                    <input asp-for="Cmnd" class="form-control" />
                                    <span asp-validation-for="Cmnd" class="text-danger"></span>
                                </div>
                                <div class="form-group" hidden>
                                    <label asp-for="Avatar" class="control-label"></label>
                                    <input asp-for="Avatar" class="form-control" />
                                    <span asp-validation-for="Avatar" class="text-danger"></span>
                                </div>

                                @if (TempData["result"] != null)
                                {
                                    <div class="alert alert-success" role="alert">
                                        @TempData["result"]
                                    </div>
                                }
                                <div class="form-group">
                                    <label asp-for="CurrentPassword" class="control-label"></label>
                                    <input type="password" asp-for="CurrentPassword" class="form-control" />
                                    <span asp-validation-for="CurrentPassword" class="text-danger"></span>
                                    <span class="text-danger">@ViewBag.ErrorPass</span>
                                </div>
                                <div class="form-group">
                                    <label asp-for="NewPassword" class="control-label"></label>
                                    <input type="password" asp-for="NewPassword" class="form-control" />
                                    <span asp-validation-for="NewPassword" class="text-danger"></span>
                                    <span class="text-danger">@ViewBag.ErrorNull</span>
                                </div>
                                <div class="form-group">
                                    <label asp-for="ConfirmNewPassword" class="control-label"></label>
                                    <input type="password" asp-for="ConfirmNewPassword" class="form-control" />
                                    <span asp-validation-for="ConfirmNewPassword" class="text-danger"></span>
                                    <span class="text-danger">@ViewBag.ErrorNull</span>
                                </div>
                                <div class="form-group">
                                    <input type="submit" value="Đổi mật khẩu" class="btn btn-primary" style="margin-left: 100px;" />
                                </div>
                            </form>
                        </div>
                    </div>

                </div>
            </div>
        </div>
    </div>
</div>
