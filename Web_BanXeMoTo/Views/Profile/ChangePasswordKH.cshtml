
@using Microsoft.AspNetCore.Http;

@{
    ViewData["Title"] = "ChangePassword";
    Layout = null;
}
@model Web_BanXeMoTo.Controllers.ViewModelKH

<!doctype html>

<html lang="en">
<head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta http-equiv="Content-Language" content="en">
    <meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
    <title>Profile </title>
    <meta name="viewport" content="width=device-width, initial-scale=1, maximum-scale=1, user-scalable=no, shrink-to-fit=no" />
    <meta name="description" content="This is an example dashboard created using build-in elements and components.">
    <meta name="msapplication-tap-highlight" content="no">

    <link href="~/css/main.css" rel="stylesheet">
    <link href="~/css/style.css" rel="stylesheet">
</head>
<body>
    <div class="app-container app-theme-white body-tabs-shadow fixed-sidebar fixed-header">
        <div class="app-header header-shadow">
            <div class="app-header__logo">
                <div class="logo-src"></div>
                <div class="header__pane ml-auto">
                    <div>
                        <button type="button" class="hamburger close-sidebar-btn hamburger--elastic" data-class="closed-sidebar">
                            <span class="hamburger-box">
                                <span class="hamburger-inner"></span>
                            </span>
                        </button>
                    </div>
                </div>
            </div>
            <div class="app-header__mobile-menu">
                <div>
                    <button type="button" class="hamburger hamburger--elastic mobile-toggle-nav">
                        <span class="hamburger-box">
                            <span class="hamburger-inner"></span>
                        </span>
                    </button>
                </div>
            </div>
            <div class="app-header__menu">
                <span>
                    <button type="button" class="btn-icon btn-icon-only btn btn-primary btn-sm mobile-toggle-header-nav">
                        <span class="btn-icon-wrapper">
                            <i class="fa fa-ellipsis-v fa-w-6"></i>
                        </span>
                    </button>
                </span>
            </div>
            <div class="app-header__content">
                <div class="app-header-left">
                    <div class="search-wrapper">
                        <div class="input-holder">
                            <input type="text" class="search-input" placeholder="Type to search">
                            <button class="search-icon"><span></span></button>
                        </div>
                        <button class="close"></button>
                    </div>
                    <ul class="header-menu nav">
                        <li class="nav-item">
                            <a href="javascript:void(0);" class="nav-link">
                                <img class="avt" src="@Web_BanXeMoTo.Models.StaticAcc.Avatar" />
                            </a>
                        </li>
                        <li class="btn-group nav-item">
                            <a id="name" href="javascript:void(0);" class="nav-link">
                                @Web_BanXeMoTo.Models.StaticAcc.Name
                            </a>
                            <a class="nav-link">:</a>
                        </li>
                        <li class="btn-group  nav-item">
                            <a id="role" href="javascript:void(0);" class="nav-link">
                                @Context.Session.GetString("email")
                            </a>
                        </li>
                    </ul>
                </div>
            </div>
        </div>
        <div class="app-main">
            <div class="app-sidebar sidebar-shadow margin-menu">

                <div class="app-header__mobile-menu">
                    <div>
                        <button type="button" class="hamburger hamburger--elastic mobile-toggle-nav">
                            <span class="hamburger-box">
                                <span class="hamburger-inner"></span>
                            </span>
                        </button>
                    </div>
                </div>
                <div class="app-header__menu">
                    <span>
                        <button type="button" class="btn-icon btn-icon-only btn btn-primary btn-sm mobile-toggle-header-nav">
                            <span class="btn-icon-wrapper">
                                <i class="fa fa-ellipsis-v fa-w-6"></i>
                            </span>
                        </button>
                    </span>
                </div>
                <div class="scrollbar-sidebar">
                    <div class="app-sidebar__inner">
                        <ul class="vertical-nav-menu">

                            <li class="app-sidebar__heading">Thông tin cá nhân </li>
                            <li>
                                @Html.ActionLink("Trang chủ", "Home", "Customer")
                            </li>
                            <li>
                                @Html.ActionLink("Thông tin cá nhân ", "ProfileKhachHang", "Profile")
                            </li>
                            <li>
                                @Html.ActionLink("Lịch sử đơn hàng", "History", "Profile")
                            </li>
                            <li>
                                @Html.ActionLink("Đổi mật khẩu", "ChangePasswordKH", "Profile")
                            </li>
                            <li>
                                @Html.ActionLink("Đăng xuất", "Logout", "Login")
                            </li>
                        </ul>
                    </div>
                </div>
            </div>

            <div class="app-main__outer">
                <div class="row">
                    <div class="col-md-12">
                        <div class="main-card mb-3 card">
                            <div class="card-body">
                                <form asp-action="ChangePasswordKH">
                                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                                    <div style="margin-left: 50px; margin-right: 50px">
                                        <h2>Đổi mật khẩu</h2>
                                        <hr />
                                        <div class="form-group" hidden>
                                            <label asp-for="changePass.Email" class="control-label"></label>
                                            <input readonly asp-for="changePass.Email" class="form-control" />
                                            <span asp-validation-for="changePass.Email" class="text-danger"></span>
                                        </div>
                                        @if (TempData["result"] != null)
                                        {
                                            <div id="alert-success" class="alert alert-success" role="alert">
                                                @TempData["result"]
                                            </div>
                                        }
                                        <div class="form-group">
                                            <label asp-for="changePass.Password" class="control-label"></label>
                                            <input type="password" name="changePass.Password" value="" class="form-control" />
                                            <span asp-validation-for="changePass.Password" class="text-danger"></span>
                                            <span class="text-danger">@ViewBag.ErrorPass</span>
                                        </div>

                                        <div class="form-group">
                                            <label asp-for="changePass.NewPassword" class="control-label"></label>
                                            <input asp-for="changePass.NewPassword" class="form-control" />
                                            <span asp-validation-for="changePass.NewPassword" class="text-danger"></span>
                                        </div>

                                        <div class="form-group">
                                            <label asp-for="changePass.ConfirmPass" class="control-label"></label>
                                            <input asp-for=" changePass.ConfirmPass" class="form-control" />
                                            <span asp-validation-for="changePass.ConfirmPass" class="text-danger"></span>
                                        </div>
                                        <input type="submit" value="Đổi mật khẩu" class="btn btn-primary" style="margin-left: 100px;" />
                                    </div>
                                </form>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

        </div>

    </div>

    <script type="text/javascript" src="~/js/main.js"></script>

    <script src="http://maps.google.com/maps/api/js?sensor=true"></script>
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.5.1/jquery.min.js"></script>
    <script>
        setTimeout(function () {
            $('#alert-success').fadeOut('slow');
        }, 2000);
    </script>
</body>
</html>


