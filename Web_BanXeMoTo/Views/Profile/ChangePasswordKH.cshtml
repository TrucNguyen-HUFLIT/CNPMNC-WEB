@using Microsoft.AspNetCore.Http;
@model Web_BanXeMoTo.Models.KhachHang

@{
    ViewData["Title"] = "ChangePassword";
    Layout = "~/Views/Shared/_CustomerLayout.cshtml";
}

@{ Layout = null; }
<!doctype html>

<html lang="en">
<head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta http-equiv="Content-Language" content="en">
    <meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
    <title>H2T Moto | Thông tin cá nhân </title>
    <link rel="icon" type="image/jpg" href="~/img/Background/favicon.jpg" />
    <meta name="viewport" content="width=device-width, initial-scale=1, maximum-scale=1, user-scalable=no, shrink-to-fit=no" />
    <meta name="description" content="This is an example dashboard created using build-in elements and components.">
    <meta name="msapplication-tap-highlight" content="no">

    <link href="~/css/main.css" rel="stylesheet">
    <link href="~/css/style.css" rel="stylesheet">
</head>
<body>
    <div class="app-container app-theme-white body-tabs-shadow fixed-sidebar fixed-header">
        <div class="app-header header-shadow">
            <div class="app-header__logo">
                <div class="logo-src"></div>
                <div class="header__pane ml-auto">
                    <div>
                        <button type="button" class="hamburger close-sidebar-btn hamburger--elastic" data-class="closed-sidebar">
                            <span class="hamburger-box">
                                <span class="hamburger-inner"></span>
                            </span>
                        </button>
                    </div>
                </div>
            </div>
            <div class="app-header__mobile-menu">
                <div>
                    <button type="button" class="hamburger hamburger--elastic mobile-toggle-nav">
                        <span class="hamburger-box">
                            <span class="hamburger-inner"></span>
                        </span>
                    </button>
                </div>
            </div>
            <div class="app-header__menu">
                <span>
                    <button type="button" class="btn-icon btn-icon-only btn btn-primary btn-sm mobile-toggle-header-nav">
                        <span class="btn-icon-wrapper">
                            <i class="fa fa-ellipsis-v fa-w-6"></i>
                        </span>
                    </button>
                </span>
            </div>
            <div class="app-header__content">
                <div class="app-header-left">
                    <div class="search-wrapper">
                        <div class="input-holder">
                            <input type="text" class="search-input" placeholder="Type to search">
                            <button class="search-icon"><span></span></button>
                        </div>
                        <button class="close"></button>
                    </div>
                    <ul class="header-menu nav">
                        <li class="nav-item">
                            <a href="javascript:void(0);" class="nav-link">
                                <img class="avt" src="@Web_BanXeMoTo.Models.StaticAcc.Avatar" />
                            </a>
                        </li>
                        <li class="btn-group nav-item">
                            <a id="name" href="javascript:void(0);" class="nav-link">
                                @Web_BanXeMoTo.Models.StaticAcc.Name
                            </a>
                            <a class="nav-link">:</a>
                        </li>
                        <li class="btn-group  nav-item">
                            <a id="role" href="javascript:void(0);" class="nav-link">
                                @Context.Session.GetString("email")
                            </a>
                        </li>
                    </ul>
                </div>
            </div>
        </div>
        <div class="app-main">
            <div class="app-sidebar sidebar-shadow margin-menu">

                <div class="app-header__mobile-menu">
                    <div>
                        <button type="button" class="hamburger hamburger--elastic mobile-toggle-nav">
                            <span class="hamburger-box">
                                <span class="hamburger-inner"></span>
                            </span>
                        </button>
                    </div>
                </div>
                <div class="app-header__menu">
                    <span>
                        <button type="button" class="btn-icon btn-icon-only btn btn-primary btn-sm mobile-toggle-header-nav">
                            <span class="btn-icon-wrapper">
                                <i class="fa fa-ellipsis-v fa-w-6"></i>
                            </span>
                        </button>
                    </span>
                </div>
                <div class="scrollbar-sidebar">
                    <div class="app-sidebar__inner">
                        <ul class="vertical-nav-menu">

                            <li class="app-sidebar__heading">Thông tin cá nhân </li>
                            <li>
                                @Html.ActionLink("Trang chủ", "Home", "Customer")
                            </li>
                            <li>
                                @Html.ActionLink("Thông tin cá nhân ", "ProfileKhachHang", "Profile")
                            </li>
                            <li>
                                @Html.ActionLink("Lịch sử đơn hàng", "History", "Profile")
                            </li>
                            <li>
                                @Html.ActionLink("Đổi mật khẩu", "ChangePassword", "Profile")
                            </li>
                            <li>
                                @Html.ActionLink("Đăng xuất", "Logout", "Login")
                            </li>
                        </ul>
                    </div>
                </div>
            </div>

            <div class="app-main__outer">
                <div class="row">
                    <div class="col-md-12">
                        <div class="main-card mb-3 card">
                            <div class="card-body">
                                <div style="margin-left: 50px;">
                                    <h2>Đổi mật khẩu</h2>
                                    <hr />
                                    <div class="row">
                                        <div class="col-md-4">
                                            <form asp-action="ChangePassword">
                                                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                                                <div class="form-group" hidden>
                                                    <label asp-for="Idkh" class="control-label"></label>
                                                    <input asp-for="Idkh" class="form-control" />
                                                    <span asp-validation-for="Idkh" class="text-danger"></span>
                                                </div>
                                                <div class="form-group" hidden>
                                                    <label asp-for="Idtype" class="control-label"></label>
                                                    <input asp-for="Idtype" class="form-control" />
                                                    <span asp-validation-for="Idtype" class="text-danger"></span>
                                                </div>
                                                <div class="form-group" hidden>
                                                    <label asp-for="Email" class="control-label"></label>
                                                    <input asp-for="Email" class="form-control" />
                                                    <span asp-validation-for="Email" class="text-danger"></span>
                                                </div>
                                                <div class="form-group" hidden>
                                                    <label asp-for="Pass" class="control-label"></label>
                                                    <input type="password" asp-for="Pass" class="form-control" />
                                                    <span asp-validation-for="Pass" class="text-danger"></span>
                                                    <span class="text-danger">@ViewBag.ErrorPass</span>
                                                </div>
                                                <div class="form-group" hidden>
                                                    <label asp-for="TenKh" class="control-label"></label>
                                                    <input asp-for="TenKh" class="form-control" />
                                                    <span asp-validation-for="TenKh" class="text-danger"></span>
                                                </div>
                                                <div class="form-group" hidden>
                                                    <label asp-for="DiaChi" class="control-label"></label>
                                                    <input asp-for="DiaChi" class="form-control" />
                                                    <span asp-validation-for="DiaChi" class="text-danger"></span>
                                                </div>
                                                <div class="form-group" hidden>
                                                    <label asp-for="DienThoai" class="control-label"></label>
                                                    <input asp-for="DienThoai" class="form-control" />
                                                    <span asp-validation-for="DienThoai" class="text-danger"></span>
                                                </div>
                                                <div class="form-group" hidden>
                                                    <label asp-for="Avatar" class="control-label"></label>
                                                    <input asp-for="Avatar" class="form-control" />
                                                    <span asp-validation-for="Avatar" class="text-danger"></span>
                                                </div>

                                                @if (TempData["result"] != null)
                                                {
                                                    <div class="alert alert-success" role="alert">
                                                        @TempData["result"]
                                                    </div>
                                                }
                                                <div class="form-group">
                                                    <label asp-for="CurrentPassword" class="control-label"></label>
                                                    <input type="password" asp-for="CurrentPassword" class="form-control" />
                                                    <span asp-validation-for="CurrentPassword" class="text-danger"></span>
                                                    <span class="text-danger">@ViewBag.ErrorPass</span>
                                                </div>
                                                <div class="form-group">
                                                    <label asp-for="NewPassword" class="control-label"></label>
                                                    <input type="password" asp-for="NewPassword" class="form-control" />
                                                    <span asp-validation-for="NewPassword" class="text-danger"></span>
                                                    <span class="text-danger">@ViewBag.ErrorNull</span>
                                                </div>
                                                <div class="form-group">
                                                    <label asp-for="ConfirmNewPassword" class="control-label"></label>
                                                    <input type="password" asp-for="ConfirmNewPassword" class="form-control" />
                                                    <span asp-validation-for="ConfirmNewPassword" class="text-danger"></span>
                                                    <span class="text-danger">@ViewBag.ErrorNull</span>
                                                </div>
                                                <div class="form-group">
                                                    <input type="submit" value="Đổi mật khẩu" class="btn btn-primary" style="margin-left: 100px;" />
                                                </div>
                                            </form>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

        </div>

    </div>
    <script src="http://maps.google.com/maps/api/js?sensor=true"></script>

    <script type="text/javascript" src="~/js/main.js"></script>
</body>
</html>