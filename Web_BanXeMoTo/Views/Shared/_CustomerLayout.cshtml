<body>
    <!-- wpf loader Two -->
    <div id="wpf-loader-two">
        <div class="wpf-loader-two-inner">
            <span>Loading</span>
        </div>
    </div>
    <!-- / wpf loader Two -->
    <!-- SCROLL TOP BUTTON -->
    <a class="scrollToTop" href="#"><i class="fa fa-chevron-up"></i></a>
    <!-- END SCROLL TOP BUTTON -->
    <!-- Start header section -->
    <header id="aa-header">
        <!-- start header top  -->
        <div class="aa-header-top">
            <div class="container">
                <div class="row">
                    <div class="col-md-12">
                        <div class="aa-header-top-area">
                            <!-- start header top left -->
                            <div class="aa-header-top-left">
                                <!-- start cellphone -->
                                <div class="cellphone hidden-xs">
                                    <p>Contact |  <span class="fa fa-phone"></span>0723 168 268</p>
                                </div>
                                <!-- / cellphone -->
                            </div>
                            <!-- / header top left -->
                            @if (Web_BanXeMoTo.Models.StaticAcc.Avatar == "")
                            {
                                <div class="aa-header-top-right">
                                    <ul class="aa-head-top-nav-right">
                                        <li><a asp-action="Login" asp-controller="Login">Đăng nhập</a></li>
                                        <li><a asp-action="Register" asp-controller="Login">Đăng ký</a></li>
                                    </ul>
                                </div>
                            }
                            else
                            {
                                <div class="aa-header-top-right">
                                    <ul class="aa-head-top-nav-right">
                                        <li><a asp-action="logout" asp-controller="Login">Đăng xuất</a></li>
                                    </ul>
                                </div>
                            }

                        </div>
                    </div>
                </div>
            </div>
        </div>
        <!-- / header top  -->
        <!-- start header bottom  -->
        <div class="aa-header-bottom">
            <div class="container">
                <div class="row">
                    <div class="col-md-12">
                        <div class="aa-header-bottom-area">
                            <!-- logo  -->
                            <div class="aa-logo">
                                <a href="@Url.ActionLink("Home","Customer")">
                                    <span class="logo"></span>
                                    <p>H2T <strong>Moto</strong> <span>Don't let dreams be just the dream</span></p>
                                </a>
                            </div>
                            <!-- / logo  -->
                            <!-- cart box -->
                            @if (Web_BanXeMoTo.Models.StaticAcc.Avatar != "")
                            {
                                <div class="aa-cartbox">
                                    <a class="aa-cart-link" asp-action="ProfileKhachHang" asp-controller="Profile">
                                        <div>
                                            <img src="@Web_BanXeMoTo.Models.StaticAcc.Avatar" style=" border-radius: 50%; " height="40" width="40" />
                                        </div>
                                        <span class="aa-cart-title">
                                            @Web_BanXeMoTo.Models.StaticAcc.Name
                                        </span>
                                    </a>
                                </div>
                            }

                            <!-- / cart box -->
                            <!-- search box -->
                            <div class="aa-cartbox" style="padding-right:30px">
                                <a class="aa-cart-link" href="@Url.ActionLink("ProductsCart","Customer")">
                                    <span class="fa fa-shopping-basket"></span>
                                    <span class="aa-cart-title">Giỏ hàng</span>
                                    <span class="aa-cart-notify">2</span>
                                </a>
                            </div>
                            <!-- / search box -->
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <!-- menu -->
        <section id="menu">
            <div class="container">
                <div class="menu-area">
                    <!-- Navbar -->
                    <div class="navbar navbar-default" role="navigation">
                        <div class="navbar-header">
                            <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                                <span class="sr-only">Toggle navigation</span>
                                <span class="icon-bar"></span>
                                <span class="icon-bar"></span>
                                <span class="icon-bar"></span>
                            </button>
                        </div>
                        <div class="navbar-collapse collapse">
                            <!-- Left nav -->
                            <ul class="nav navbar-nav">
                                <li><a href="@Url.ActionLink("Home","Customer")">Trang chủ</a></li>
                                <li>
                                    <a href="product.html">Honda<span class="caret"></span></a>
                                    <ul class="dropdown-menu">
                                        <li><a href="product.html">Casual</a></li>
                                        <li><a href="product.html">Sports</a></li>
                                        <li><a href="product.html">Formal</a></li>
                                        <li><a href="product.html">Standard</a></li>
                                    </ul>
                                </li>
                                <li>
                                    <a href="product.html">Yamaha <span class="caret"></span></a>
                                    <ul class="dropdown-menu">
                                        <li><a href="product.html">Kurta & Kurti</a></li>
                                        <li><a href="product.html">Trousers</a></li>
                                        <li><a href="product.html">Casual</a></li>
                                        <li><a href="product.html">Sports</a></li>

                                    </ul>
                                <li>
                                    <a href="product.html">Kawasaki <span class="caret"></span></a>
                                    <ul class="dropdown-menu">
                                        <li><a href="product.html">Casual</a></li>
                                        <li><a href="product.html">Sports</a></li>
                                        <li><a href="product.html">Formal</a></li>
                                        <li><a href="product.html">Standard</a></li>
                                    </ul>
                                </li>
                                <li>
                                    <a href="product.html">Suzuki <span class="caret"></span></a>
                                    <ul class="dropdown-menu">
                                        <li><a href="product.html">Camera</a></li>
                                        <li><a href="product.html">Mobile</a></li>
                                        <li><a href="product.html">Tablet</a></li>
                                        <li><a href="product.html">Laptop</a></li>
                                        <li><a href="product.html">Accesories</a></li>
                                    </ul>
                                </li>
                                <li>
                                    <a href="product.html">Hãng Khác <span class="caret"></span></a>
                                    <ul class="dropdown-menu">
                                        <li><a href="product.html">Camera</a></li>
                                        <li><a href="product.html">Mobile</a></li>
                                        <li><a href="product.html">Tablet</a></li>
                                        <li><a href="product.html">Laptop</a></li>
                                        <li><a href="product.html">Accesories</a></li>
                                    </ul>
                                </li>
                                <li><a href="#aa-footer">Liên hệ </a></li>


                            </ul>
                        </div><!--/.nav-collapse -->
                    </div>
                </div>
            </div>
        </section>
        <!-- / menu -->
        <!-- / header bottom  -->
    </header>
    <!-- / header section -->

    <main>

        @RenderBody()

    </main>
    <!-- footer -->
    <footer id="aa-footer">
        <!-- footer bottom -->
        <div class="aa-footer-top">
            <div class="container">
                <div class="row">
                    <div class="col-md-12">
                        <div class="aa-footer-top-area">
                            <div class="row">
                                <div class="col-md-4 col-sm-6">
                                    @*<div class="aa-footer-widget">
                                            <a href="index.html"><img src="./images/logo/logo_home.jpg" style="height: 45%; width: 45%; margin-top: 10%;"></a>
                                        </div>*@
                                    <div>
                                        <a href="@Url.ActionLink("Home","Customer")" style="font-family:  Raleway, sans-serif;font-size: 28px;">
                                            <p style="display: inline-block; float: left; font-weight: bold; margin-bottom: 0; margin-left: 5px; margin-top: -5px; color: white;">
                                                H2T
                                                <strong style=" color: #ff6666;">Moto</strong> <span style=" display: block; font-size: 12px; font-weight: normal; letter-spacing: 1.5px; text-transform: uppercase;">Don't let dreams be just the dream</span>
                                            </p>
                                        </a>
                                    </div>
                                </div>
                                <div class="col-md-2 col-sm-6">
                                    <div class="aa-footer-widget">
                                        <h3>Menu</h3>
                                        <ul class="aa-footer-nav">
                                            <li><a href="@Url.ActionLink("Home","Customer")">Trang chủ</a></li>
                                            <li><a href="@Url.ActionLink("Products","Customer")">Sản phẩm</a></li>
                                            <li><a href="#">Về chúng tôi</a></li>
