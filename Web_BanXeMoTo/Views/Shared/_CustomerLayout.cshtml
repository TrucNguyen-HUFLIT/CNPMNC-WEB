    <!-- Product view slider -->
    <script type="text/javascript" src="~/customer/js/jquery.simpleGallery.js"></script>
    <script type="text/javascript" src="~/customer/js/jquery.simpleLens.js"></script>
    <!-- slick slider -->
    <script type="text/javascript" src="~/customer/js/slick.js"></script>
    <!-- Price picker slider -->
